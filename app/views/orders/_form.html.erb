<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :order_no %>
    <%= form.number_field :order_no %>
  </div>

  <div class="field">
    <%= form.label :tracking_no %>
    <%= form.number_field :tracking_no %>
  </div>

  <div class="field">
    <%= form.label :purchase_total %>
    <%= form.text_field :purchase_total %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :order_type %>
  </div>

  <div class="field" >
  <%= form.label :product_id %>
  <%= form.select :product_id, options_for_select(Product.all.collect{|c| [c.name, c.id]}),class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
